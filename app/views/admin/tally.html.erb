<h1>Election Results!</h1>
<h2>Total Votes: <%=@number_of_votes %></h2>
<button class="btn toggle">Toggle results</button>
<div class="row well well-large">
		<h3>Candidates</h3>
		<% @candidates.each do |candidate|%>
			<% if candidate.yes > @number_of_votes * 0.80 && candidate.no < @number_of_votes * 0.15%>
			<%= content_tag :div, :class => "span2 well yes " do %>
			<% if candidate.image_url != ""%>
			<%= image_tag(candidate.image_url, :size=> "256x256", :class => "candidate_image")%>
			<%end%>
			<%=content_tag :p, {:class=> "name" } do %>
				<%= candidate.name%>
				<p class="results"><%= "Yes: " + candidate.yes.to_s + " Abstain : " + candidate.abstain.to_s + " No: " + candidate.no.to_s%></p><%end%>
			<%end%>
			<% elsif candidate.no < @number_of_votes * 0.15 %>
			<%= content_tag :div, :class => "span2 well abstain" do %>
			<% if candidate.image_url != ""%>
			<%= image_tag(candidate.image_url, :size=> "256x256", :class => "candidate_image")%>
			<%end%>
			<%=content_tag :p, {:class=> "name"} do %><%= candidate.name%><p class="results"><%= "Yes: " + candidate.yes.to_s + " Abstain : " + candidate.abstain.to_s + " No: " + candidate.no.to_s%></p><%end%>
			<%end%>
			<%else %>
			<%= content_tag :div, :class => "span2 well no" do %>
			<% if candidate.image_url != ""%>
			<%= image_tag(candidate.image_url, :size=> "256x256", :class => "candidate_image")%>
			<%end%>
			<%=content_tag :p, {:class=> "name"} do %><%= candidate.name%><p class="results"><%= "Yes: " + candidate.yes.to_s + " Abstain : " + candidate.abstain.to_s + " No: " + candidate.no.to_s%></p><%end%>
			<%end%>
			<%end%>
			<%end%>
			</div>
			
	</div>